{
    "compilerOptions": {
        "declaration": true,
        "jsx": "react",
        "lib": ["dom", "es2015", "es2016", "es2017", "esnext.asynciterable"],
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "target": "es5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "lib",
        "rootDirs": ["src", ".storybook"]
    },
    "include": ["src/**/*"]
}
